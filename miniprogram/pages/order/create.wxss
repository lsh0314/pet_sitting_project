/* pages/order/create.wxss */

.container {
  padding: 0 0 120rpx 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 标题样式 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 30rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 帮溜员卡片样式 */
.sitter-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin: 30rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.sitter-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 4rpx solid #ffd700; /* 金黄色边框 */
}

.sitter-info {
  flex: 1;
}

.sitter-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.sitter-rating {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.icon-star {
  color: #ffd700; /* 金黄色星星 */
  margin-right: 6rpx;
}

/* 表单部分样式 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.form-section:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 30rpx;
  background-color: #ffd700; /* 黄色装饰条 */
  border-radius: 4rpx;
}

.refresh-btn {
  font-size: 24rpx;
  color: #4caf50;
  font-weight: normal;
  padding: 6rpx 16rpx;
  border: 1rpx solid #4caf50;
  border-radius: 30rpx;
}

/* 宠物选择样式 */
.pet-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.pet-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  position: relative;
}

.pet-item.selected {
  background-color: #fff9e6; /* 淡黄色背景 */
  border: 2rpx solid #ffd700; /* 金黄色边框 */
}

.pet-item.selected::after {
  content: "✓";
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: #ffd700;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pet-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.pet-name {
  font-size: 26rpx;
  color: #333;
}

.add-pet {
  border: 2rpx dashed #ddd;
  background-color: #fff;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  color: #999;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
}

/* 服务类型选择样式 */
.service-types {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
  justify-content: flex-start;
}

.service-type-item {
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 2rpx solid #f0f0f0;
}

.service-type-item.selected {
  background-color: #fff8e1;
  border-color: #ffd700;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.2);
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.service-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.service-type-item.selected .service-name {
  color: #ff9800;
}

/* 时间选择器样式 */
.time-selectors {
  background-color: #fff;
}

/* 日期选择器样式 */
.date-picker-container {
  margin-bottom: 20rpx;
}

.date-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.date-picker-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.date-picker-selected {
  font-size: 26rpx;
  color: #4caf50;
  font-weight: 500;
}

.calendar-container {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 日历图例 */
.calendar-legend {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  padding: 10rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.legend-color.available {
  background-color: #4caf50;
}

.legend-color.unavailable {
  background-color: #f5f5f5;
  border: 1px solid #e0e0e0;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

.time-picker-row {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-label {
  color: #666;
  font-size: 28rpx;
}

.picker-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 地址输入框样式 */
.address-input {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 备注文本域样式 */
.remarks-textarea {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
}

/* 价格信息样式 */
.price-section {
  margin-bottom: 120rpx; /* 为底部按钮留出空间 */
}

.price-details {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
}

.price-row:last-child {
  border-bottom: none;
}

.total-price {
  margin-top: 10rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #ddd;
  font-weight: bold;
  color: #333;
}

.total-price .price-value {
  color: #ff6b6b;
  font-size: 32rpx;
}

/* 提交按钮样式 */
.submit-btn-container {
  padding: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn-primary {
  background: linear-gradient(to right, #ffcc00, #ff9500);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  box-shadow: 0 6rpx 12rpx rgba(255, 180, 0, 0.2);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(255, 180, 0, 0.2);
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ffd700; /* 黄色加载指示器 */
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 没有宠物时的提示 */
.no-pet-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.tip-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.tip-btn {
  padding: 12rpx 30rpx;
  background-color: #ffd700;
  color: #333;
  font-size: 26rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

/* 价格提示样式 */
.price-tip {
  margin-top: 20rpx;
  padding: 10rpx;
  background-color: #fff8e1;
  border-radius: 8rpx;
  border-left: 4rpx solid #ffc107;
}

.tip-text {
  font-size: 24rpx;
  color: #ff9800;
}

/* 无服务提示样式 */
.no-service-tip {
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  border: 1rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.no-service-tip::before {
  content: "🐾";
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

/* 加载中提示样式 */
.loading-tip {
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading-tip::before {
  content: "";
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #4caf50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* 调试信息样式 */
.debug-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f8ff;
  border: 1rpx solid #add8e6;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.debug-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #0066cc;
}

.debug-item {
  padding: 6rpx 0;
  border-bottom: 1rpx dashed #add8e6;
}

/* 订单表单整体样式 */
.order-form {
  padding: 0 30rpx;
  margin-bottom: 120rpx;
}
