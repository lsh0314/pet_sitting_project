/* 页面容器 */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 标题栏 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  position: relative;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-more {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 角色切换器 */
.role-switcher {
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 10rpx;
}

.role-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 30rpx;
  color: #666;
  border-radius: 30rpx;
  margin: 0 20rpx;
  border: 1rpx solid #eee;
  position: relative;
}

/* 伴宠专员警告图标 */
.sitter-warning {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #ff5722;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 8rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  box-shadow: 0 2rpx 6rpx rgba(255, 87, 34, 0.5);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.role-item.active {
  color: #333;
  font-weight: bold;
  background-color: #fde74c;
  border-color: #fde74c;
  box-shadow: 0 2rpx 6rpx rgba(253, 231, 76, 0.3);
}

.role-item.active::after {
  content: "";
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #fde74c;
  border-radius: 3rpx;
}

/* 标签页 */
.tab-container {
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #fde74c;
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-id {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  color: #ff7b7b;
}

.order-content {
  padding: 20rpx 30rpx;
}

.order-info {
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  width: 160rpx;
  font-size: 26rpx;
  color: #999;
}

.value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.price {
  color: #ff7b7b;
  font-weight: bold;
}

/* 倒计时样式 */
.countdown {
  margin-top: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx dashed #eee;
}

.countdown-text {
  color: #ff5722 !important;
  font-weight: bold;
  font-size: 28rpx !important;
}

.order-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: flex-end;
}

.action-btns {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.action-btns button {
  margin-left: 15rpx;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  line-height: 1.5;
  border-radius: 30rpx;
  min-width: 140rpx;
  text-align: center;
}

.btn-default {
  color: #666;
  background-color: #f7f7f7;
  border: 1rpx solid #ddd;
}

.btn-primary {
  color: #fff;
  background-color: #ff7b7b;
  border: none;
}

/* 新增的取消订单按钮 */
.btn-cancel {
  color: #ff5722;
  background-color: #fff;
  border: 1rpx solid #ff5722;
}

/* 新增的去支付按钮 */
.btn-pay {
  color: #333;
  background: linear-gradient(to right, #fde74c, #ffb700);
  border: none;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(253, 231, 76, 0.3);
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #fde74c;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
