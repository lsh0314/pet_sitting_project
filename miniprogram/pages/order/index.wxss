/* 页面容器 */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 标题栏 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  position: relative;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-more {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 标签页 */
.tab-container {
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #fde74c;
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-id {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  color: #ff7b7b;
}

.order-content {
  padding: 20rpx 30rpx;
}

.order-info {
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  width: 160rpx;
  font-size: 26rpx;
  color: #999;
}

.value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.price {
  color: #ff7b7b;
  font-weight: bold;
}

.order-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: flex-end;
}

.action-btns {
  display: flex;
}

.action-btns button {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  line-height: 1.5;
  border-radius: 30rpx;
}

.btn-default {
  color: #666;
  background-color: #f7f7f7;
  border: 1rpx solid #ddd;
}

.btn-primary {
  color: #fff;
  background-color: #ff7b7b;
  border: none;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #fde74c;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
