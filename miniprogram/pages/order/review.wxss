/* 整体容器 */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  position: relative;
  display: flex;
  align-items: center;
  height: 90rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  padding: 15rpx;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.page-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 50rpx; /* 为了标题居中 */
}

/* 评价表单 */
.review-form {
  padding: 30rpx;
}

/* 帮溜员信息 */
.sitter-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.sitter-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #f0f0f0;
}

.sitter-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.order-service {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 各个评价区块通用样式 */
.rating-section,
.tags-section,
.comment-section,
.anonymous-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  display: inline-block;
  width: 8rpx;
  height: 30rpx;
  background-color: #4caf50;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

/* 星级评分 */
.rating-stars {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.star {
  font-size: 60rpx;
  color: #ddd;
  margin: 0 10rpx;
  transition: transform 0.2s ease;
}

.star.active {
  color: #ffca28;
}

.star:active {
  transform: scale(1.2);
}

/* 评价标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag {
  padding: 15rpx 30rpx;
  margin: 10rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
}

.tag.active {
  background-color: #e8f5e9 !important;
  color: #4caf50 !important;
  border: 1rpx solid #4caf50 !important;
}

/* 评价内容 */
.comment-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.comment-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 匿名评价 */
.anonymous-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.anonymous-label {
  font-size: 28rpx;
  color: #666;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 40rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  font-weight: 500;
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.3);
}

.submit-btn:active {
  opacity: 0.9;
}

.submit-btn[disabled] {
  background-color: #ccc !important;
  color: #fff !important;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4caf50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 评分文字描述 */
.rating-text {
  text-align: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #ffca28;
  font-weight: 500;
}

/* 标签数量提示 */
.tags-hint {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 提交成功动画 */
.success-animation {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 999;
}

.success-icon {
  font-size: 120rpx;
  color: #4caf50;
  margin-bottom: 30rpx;
}

.success-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
