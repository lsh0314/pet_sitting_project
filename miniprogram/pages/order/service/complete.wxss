/* 页面容器 */
.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

/* 导航栏 */
.nav-bar {
  position: relative;
  display: flex;
  align-items: center;
  height: 88rpx;
  background-color: #ffffff;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-right: 60rpx;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

/* 信息项 */
.info-item {
  display: flex;
  margin-bottom: 20rpx;
}

.info-label {
  width: 180rpx;
  color: #666;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

/* 位置验证 */
.location-status {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.location-status.success {
  background-color: #f0f9eb;
  border: 1rpx solid #e1f3d8;
}

.status-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.distance-text {
  font-size: 26rpx;
  color: #999;
}

.btn-verify {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f8f8f8;
  color: #333;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin: 0;
  padding: 0;
}

.btn-verify.loading {
  opacity: 0.7;
}

/* 拍照区域 */
.photo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.photo-placeholder {
  width: 300rpx;
  height: 300rpx;
  background-color: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.placeholder-icon {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.photo-preview {
  width: 400rpx;
  height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.photo-actions {
  display: flex;
  justify-content: center;
}

.btn-retake {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f8f8f8;
  color: #333;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin: 0;
  padding: 0;
}

/* 提交按钮 */
.btn-submit {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 40rpx auto;
}

.btn-submit.disabled {
  background-color: #9be0b8;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
}

.error-container text {
  margin: 20rpx 0 40rpx;
  color: #666;
  font-size: 28rpx;
}

.btn-retry {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin: 0;
  padding: 0;
}
