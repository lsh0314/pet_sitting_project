/* pages/order/detail.wxss */

.container {
  padding: 0 0 120rpx 0;
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  padding: 10rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 40rpx;
}

/* 订单状态样式 */
.order-status {
  background-color: #ffffff;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-tag {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.status-tag.pending {
  background-color: #ff9800;
}

.status-tag.accepted {
  background-color: #2196f3;
}

.status-tag.paid {
  background-color: #4caf50;
}

.status-tag.in_progress {
  background-color: #9c27b0;
}

.status-tag.completed {
  background-color: #3f51b5;
}

.status-tag.confirmed {
  background-color: #009688;
}

.status-tag.cancelled,
.status-tag.rejected {
  background-color: #9e9e9e;
}

.order-id {
  font-size: 24rpx;
  color: #999;
}

/* 卡片通用样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

/* 帮溜员信息样式 */
.sitter-info {
  display: flex;
  align-items: center;
}

.sitter-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.sitter-detail {
  flex: 1;
}

.sitter-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.sitter-rating {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.icon-star {
  color: #ffb400;
  margin-right: 6rpx;
}

/* 宠物信息样式 */
.pet-info {
  display: flex;
  align-items: center;
}

.pet-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.pet-detail {
  flex: 1;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.pet-breed {
  font-size: 26rpx;
  color: #666;
}

/* 服务信息样式 */
.info-item {
  display: flex;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.remarks {
  white-space: pre-wrap;
  word-break: break-all;
}

/* 价格信息样式 */
.price-info {
  padding-top: 10rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.price-item.total {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
  margin-top: 10rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
}

.price-item.total .price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* 底部操作栏样式 */
.footer-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: center;
}

.btn-primary {
  background-color: #1aad19;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 80%;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
}

.error-container text {
  margin: 30rpx 0;
  color: #666;
}

.btn-retry {
  background-color: #ffffff;
  color: #1aad19;
  border: 1rpx solid #1aad19;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
}
