<view class="container">
  <!-- 标题栏 -->
  <view class="header">
    <view class="header-title">订单支付</view>
  </view>
  
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading-icon"></view>
    <view class="loading-text">加载中...</view>
  </view>
  
  <!-- 订单信息 -->
  <view class="order-info" wx:if="{{!loading && orderInfo}}">
    <view class="order-section">
      <view class="section-title">订单信息</view>
      <view class="info-item">
        <text class="label">订单编号：</text>
        <text class="value">{{orderInfo.orderId}}</text>
      </view>
      <view class="info-item">
        <text class="label">服务类型：</text>
        <text class="value">
          <text wx:if="{{orderInfo.serviceType === 'walk'}}">遛狗</text>
          <text wx:elif="{{orderInfo.serviceType === 'feed'}}">喂猫</text>
          <text wx:elif="{{orderInfo.serviceType === 'boarding'}}">寄养</text>
          <text wx:else>其他服务</text>
        </text>
      </view>
      <view class="info-item">
        <text class="label">宠物名称：</text>
        <text class="value">{{orderInfo.pet.name}}</text>
      </view>
      <view class="info-item">
        <text class="label">服务时间：</text>
        <text class="value">{{orderInfo.serviceDate}} {{orderInfo.startTime}}-{{orderInfo.endTime}}</text>
      </view>
      <view class="info-item">
        <text class="label">服务地点：</text>
        <text class="value">{{orderInfo.address}}</text>
      </view>
    </view>
    
    <view class="order-section">
      <view class="section-title">帮溜员信息</view>
      <view class="info-item">
        <text class="label">帮溜员：</text>
        <text class="value">{{orderInfo.sitter.nickname}}</text>
      </view>
    </view>
    
    <view class="order-section">
      <view class="section-title">支付信息</view>
      <view class="price-item">
        <text class="label">订单金额</text>
        <text class="price">¥{{orderInfo.payment.price}}</text>
      </view>
    </view>
    
    <!-- 支付方式选择 -->
    <view class="payment-methods">
      <view class="section-title">支付方式</view>
      <view class="payment-method active">
        <image class="method-icon" src="/static/images/wechat-pay.png"></image>
        <text class="method-name">微信支付</text>
        <view class="method-selected"></view>
      </view>
    </view>
  </view>
  
  <!-- 底部按钮 -->
  <view class="footer-btns" wx:if="{{!loading && orderInfo}}">
    <button class="btn-cancel" bindtap="cancelPay">取消</button>
    <button class="btn-pay" bindtap="payOrder">立即支付 ¥{{orderInfo.payment.price}}</button>
  </view>
</view> 