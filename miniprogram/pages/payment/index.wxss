.container {
  padding: 0 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.order-info {
  margin-bottom: 120rpx;
}

.order-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 15rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.label {
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.price {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff5722;
}

.payment-methods {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.method-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.method-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.method-selected {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}

.payment-method.active .method-selected {
  border-color: #07c160;
  background-color: #07c160;
  position: relative;
}

.payment-method.active .method-selected:after {
  content: "";
  width: 20rpx;
  height: 10rpx;
  border-left: 3rpx solid #fff;
  border-bottom: 3rpx solid #fff;
  transform: rotate(-45deg);
  position: absolute;
  top: 10rpx;
}

.footer-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-cancel {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.btn-pay {
  flex: 2;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}
