.auth-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.logo-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.app-slogan {
  font-size: 28rpx;
  color: #666;
}

.login-container {
  width: 100%;
  padding-bottom: 60rpx;
}

.login-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  padding: 0;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.tips {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
}

.link {
  color: #1296db;
}

/* 开发环境测试工具 */
.dev-tools {
  margin-top: 20rpx;
  width: 100%;
}

.dev-button {
  background-color: #f0f0f0;
  color: #333;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.test-users-list {
  background-color: white;
  border-radius: 8rpx;
  padding: 10rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.test-user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.test-user-item:last-child {
  border-bottom: none;
}

.test-user-item:active {
  background-color: #f9f9f9;
}

.test-user-name {
  font-size: 30rpx;
  color: #333;
}

.test-user-role {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}
