.auth-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.logo-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.app-slogan {
  font-size: 28rpx;
  color: #666;
}

.login-container {
  width: 100%;
  padding-bottom: 60rpx;
}

.login-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  padding: 0;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.tips {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
}

.link {
  color: #1296db;
}
