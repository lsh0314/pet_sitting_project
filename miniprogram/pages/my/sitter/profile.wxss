/* pages/my/sitter/profile.wxss */

.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 错误提示 */
.error-container {
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.error-message {
  color: #f5222d;
  font-size: 28rpx;
}

/* 表单容器 */
.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 表单部分 */
.form-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 个人简介输入框 */
.bio-input {
  width: 100%;
  height: 200rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 服务区域输入框 */
.area-input {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 服务项目列表 */
.service-list {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 10rpx 0;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.service-item:last-child {
  border-bottom: none;
}

.service-check {
  display: flex;
  align-items: center;
}

.service-name {
  margin-left: 10rpx;
  font-size: 28rpx;
}

.price-input-container {
  display: flex;
  align-items: center;
}

.price-input {
  width: 120rpx;
  height: 60rpx;
  background-color: #fff;
  border: 1rpx solid #e8e8e8;
  border-radius: 6rpx;
  text-align: center;
  font-size: 28rpx;
}

.price-unit {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* 日期选择器 */
.date-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  height: 60rpx;
}

.date-placeholder {
  color: #999;
  font-size: 28rpx;
}

.selected-dates {
  font-size: 28rpx;
  color: #333;
}

.date-arrow {
  color: #999;
  font-size: 32rpx;
}

/* 提交按钮 */
.submit-btn {
  margin: 60rpx 30rpx;
  background-color: #1296db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.submit-btn:active {
  background-color: #0d85c2;
}

/* 日期选择器弹窗 */
.date-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.date-picker-container {
  width: 90%;
  max-height: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.date-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-picker-title {
  font-size: 32rpx;
  font-weight: bold;
}

.date-picker-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.date-picker-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.date-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.date-item {
  width: 30%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.date-item.selected {
  background-color: #1296db;
  color: #fff;
}

.date-picker-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.date-picker-btn {
  background-color: #1296db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
