.container {
  padding: 30rpx;
  background-color: #f8f8f8;
}

.header {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #ffba00, #ffd700);
  border-radius: 12rpx;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.form-container {
  margin-bottom: 40rpx;
}

.form-section {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.form-section::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(to bottom, #ffba00, #ffd700);
}

.section-title {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 20px;
  color: #333;
}

.optional-tag {
  font-size: 14px;
  font-weight: normal;
  color: #888;
  margin-left: 5px;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
}

.form-input:focus {
  border-color: #ffba00;
}

.picker-view {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.placeholder {
  color: #999;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
  transform: rotate(90deg);
}

.upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-box {
  width: 180rpx;
  height: 180rpx;
  background-color: #f9f9f9;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 60rpx;
  color: #ccc;
  line-height: 1;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.image-preview {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.delete-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 8rpx;
}

.submit-btn {
  margin-top: 50rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: linear-gradient(135deg, #ffba00, #ffd700);
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 12rpx rgba(255, 186, 0, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  background: linear-gradient(135deg, #e6a800, #e6c200);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 186, 0, 0.2);
}

.tips {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

/* 上次申请审核结果样式 */
.last-result-container {
  background-color: #f8f8f8;
  border-radius: 8px;
  margin: 0 20rpx 30rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.last-result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.last-result-content {
  font-size: 26rpx;
  color: #666;
}

.last-result-status {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.last-result-status.pending {
  color: #ff9800;
}

.last-result-status.approved {
  color: #4caf50;
}

.last-result-status.rejected {
  color: #f44336;
}

.last-result-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.last-result-reason {
  background-color: #fff3f3;
  border-left: 4rpx solid #f44336;
  padding: 16rpx;
  margin-top: 10rpx;
  border-radius: 4rpx;
  color: #555;
}
