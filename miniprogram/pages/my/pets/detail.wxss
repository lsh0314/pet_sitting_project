/* pages/my/pets/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading {
  color: #999;
  font-size: 28rpx;
}

.error-message {
  color: #e64340;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.pet-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.pet-photo-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.pet-photo {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.edit-photo-hint {
  position: absolute;
  bottom: -10rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 22rpx;
  color: #07c160;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 4rpx 0;
  border-radius: 0 0 8rpx 8rpx;
}

.pet-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.action-btn.edit {
  background-color: #f8f8f8;
  color: #07c160;
  border: 1px solid #07c160;
}

.action-btn.cancel {
  background-color: #f8f8f8;
  color: #999;
  border: 1px solid #ddd;
}

.action-btn.delete {
  background-color: #f8f8f8;
  color: #e64340;
  border: 1px solid #e64340;
}

.action-btn.save {
  background-color: #07c160;
  color: #fff;
}

.action-btn[disabled] {
  background-color: #9ed0a9;
  color: rgba(255, 255, 255, 0.8);
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-section {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.form-section:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.required::after {
  content: "*";
  color: #e64340;
  margin-left: 6rpx;
}

.form-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  padding: 10rpx 0;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.radio-group {
  display: flex;
  flex-direction: row;
}

.radio {
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.tag.selected {
  background-color: #07c160;
  color: #fff;
}

.vaccine-photos {
  display: flex;
  flex-wrap: wrap;
}

.vaccine-photo-item {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.vaccine-photo {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.vaccine-upload-btn {
  width: 150rpx;
  height: 150rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
}
